openapi: 3.0.0
info:
  title: V Pokemon
  description: Simple [v lang](https://vlang.io/) test API interface to [Pok√©api](https://pokeapi.co/).
  version: 0.0.1
servers:
  - url: http://localhost:8080/v1
    description: Local development server
paths:
  /pokemon/{name}:
    get:
      summary: Returns a pokemon by Name or ID.
      parameters:
        - name: name
          in: path
          required: true
          description: Pokemon Name or ID.
          schema:
            type : string
            minimum: 1
      responses: 
        '200':
          description: OK